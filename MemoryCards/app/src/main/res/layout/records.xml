<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/buttons"
        android:title="@string/select"
        android:titleTextColor="@color/white"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:text="@string/select"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:background="@color/buttons"
            android:id="@+id/levelTitle"
            android:textIsSelectable="true" />

    </android.support.v7.widget.Toolbar>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/table"
        android:columnCount="8"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:paddingLeft="3dp"
        android:background="@color/background"
        android:columnOrderPreserved="true"
        android:rowOrderPreserved="true"
        android:paddingTop="50dp">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/firstLevel"
            android:onClick="beginnerOnClick"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/flowerf"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/secondLevel"
            android:onClick="easyOnclick"
            android:layout_row="0"
            android:layout_column="5"
            android:src="@drawable/musf"
            android:layout_marginLeft="5dp"
            android:baselineAlignBottom="false"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/third"
            android:layout_row="0"
            android:layout_column="6"
            android:src="@drawable/tastyf"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="3dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/forth"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/foodf"
            android:layout_marginLeft="3dp"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:clickable="false"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/fifth"
            android:layout_row="1"
            android:layout_column="5"
            android:src="@drawable/animalf"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="7dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/sixth"
            android:layout_row="1"
            android:layout_column="6"
            android:src="@drawable/pef"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="3dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/seventh"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/domf"
            android:layout_marginLeft="1dp"
            android:adjustViewBounds="false" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/eight"
            android:layout_row="2"
            android:layout_column="5"
            android:src="@drawable/bf"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/nines"
            android:layout_row="2"
            android:layout_column="6"
            android:src="@drawable/mf"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp" />

    </GridLayout>

</LinearLayout>