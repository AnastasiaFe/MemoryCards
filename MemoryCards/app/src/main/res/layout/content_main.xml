<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anastasia.memorycards.MainActivity"
    tools:showIn="@layout/activity_main">


   <Button
       android:layout_width="300sp"
       android:layout_height="70sp"

       android:layout_marginTop="60dp"
       android:id="@+id/startButton"
       android:onClick="startOnClick"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_alignParentStart="false"
       android:layout_alignParentLeft="false"
       android:text="@string/StartButtonText" />

    <Button

        android:layout_width="500sp"
        android:layout_height="70sp"
        android:onClick="recordsOnClick"
        android:layout_marginTop="43dp"
        android:id="@+id/recordsButton"
        android:layout_below="@+id/startButton"
        android:layout_alignLeft="@+id/startButton"
        android:layout_alignStart="@+id/startButton"
        android:layout_alignRight="@+id/startButton"
        android:layout_alignEnd="@+id/startButton"
        android:text="@string/RecordsButtonText" />

    <Button

        android:layout_width="500sp"
        android:layout_height="70sp"
        android:layout_marginTop="41dp"
        android:id="@+id/settingsButton"
        android:onClick="settingsOnClick"
        android:layout_below="@+id/recordsButton"
        android:layout_alignLeft="@+id/recordsButton"
        android:layout_alignStart="@+id/recordsButton"
        android:layout_alignRight="@+id/recordsButton"
        android:layout_alignEnd="@+id/recordsButton"
        android:text="@string/SettingButtonText" />

    <Button

        android:layout_width="500sp"
        android:layout_height="70sp"
        android:layout_marginTop="41dp"
        android:id="@+id/exitButton"
        android:layout_below="@+id/settingsButton"
        android:layout_alignLeft="@+id/settingsButton"
        android:layout_alignStart="@+id/settingsButton"
        android:layout_alignRight="@+id/settingsButton"
        android:layout_alignEnd="@+id/settingsButton"
        android:text="@string/ExitButtonText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Title"
        android:id="@+id/textView"
        android:textSize="35sp"
style="@style/TitleStyle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:phoneNumber="true" />
</RelativeLayout>
